<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#44546A"
    android:id = "@+id/bombDepo_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bomb Depository"
        android:id="@+id/bombdepo"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp" />
    <View
        android:id ="@+id/fakeView"
        android:layout_width ="50dp"
        android:layout_height ="20dp"
        android:layout_centerInParent="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/greenTick"
        android:background="@drawable/green_tick"
        android:layout_alignTop="@+id/redCross"
        android:layout_toLeftOf="@+id/fakeView" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/redCross"
        android:background="@drawable/red_cross"
        android:layout_below="@+id/bombdepo"
        android:layout_toRightOf="@+id/fakeView"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/redCross"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bombDepoScroll"
            android:orientation="vertical">
        </LinearLayout>


    </ScrollView>


</RelativeLayout>
