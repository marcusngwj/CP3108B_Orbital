<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sg.edu.nus.bombsquad.CreateRoom"
    android:background="#44546A">

    <!--Room Name-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Room Name"
        android:textSize="40sp"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="123dp" />

    <!--Room Name -->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textSize="40sp"
        android:ems="15"
        android:id="@+id/editTextRoomName"
        android:background="#ffffff"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true" />

    <!--Generate Code-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:paddingLeft="25sp"
        android:paddingRight="25sp"
        android:text="Generate Code"
        android:id="@+id/buttonGenerate"
        android:background="@drawable/white_border"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <!--Generated code-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2sp"
        android:paddingBottom="2sp"
        android:paddingRight="5sp"
        android:paddingLeft="5sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Generated code will appear here"
        android:id="@+id/textViewGCode"
        android:layout_below="@+id/buttonGenerate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp" />

    <!--Room Setup-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room Setup"
        android:id="@+id/buttonSetUp"
        android:background="@drawable/red_border"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:paddingTop="7sp"
        android:paddingBottom="7sp"
        android:paddingLeft="25sp"
        android:paddingRight="25sp"
        android:layout_below="@+id/textViewGCode"
        android:layout_alignEnd="@+id/editTextRoomName"
        android:layout_marginTop="60dp" />


</RelativeLayout>
