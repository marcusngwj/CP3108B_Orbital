<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sg.edu.nus.bombsquad.LoginPage"
    android:background="#44546A"
    android:textAlignment="center">

    <!--App Name-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FF0000"
        android:textSize="45sp"
        android:text="Bomb Squad"
        android:id="@+id/textView3"
        android:layout_marginTop="53dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!--Username-->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="16"
        android:id="@+id/editTextUser"
        android:layout_marginTop="164dp"
        android:hint="username"
        android:textColorHint="#D3D3D3"
        android:textColor="#FFFFFF"
        android:backgroundTint="@android:color/holo_green_light"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <!--Password-->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="16"
        android:id="@+id/editTextPass"
        android:hint="password"
        android:textColorHint="#D3D3D3"
        android:textColor="#FFFFFF"
        android:backgroundTint="@android:color/holo_green_light"
        android:layout_below="@+id/editTextUser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />

    <!--Login-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:text=" Login "
        android:onClick="login"
        android:id="@+id/buttonLogin"
        android:layout_below="@+id/editTextPass"
        android:layout_alignEnd="@+id/editTextPass"
        android:background="@drawable/normal_button"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false" />

    <!--Forget password-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forget_password"
        android:id="@+id/textViewForgetPassword"
        android:textColor="#F64D54"
        android:layout_marginTop="7dp"
        android:layout_below="@id/buttonLogin"
        android:layout_alignEnd="@+id/editTextPass"
        android:textAppearance="?android:attr/textAppearanceSmall"/>
    
    <!--Register-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "Register"
        android:id="@+id/buttonRegister"
        android:background="@drawable/normal_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
